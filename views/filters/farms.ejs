<% layout("/layouts/boilerplate.ejs") %>

<body>
    <%- include("../includes/filters.ejs") %>

    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1" >
        <% for(list of allListings.slice(16,20)){ %>
                <a href="/listings/<%= list._id %>">
                    <div class="col">
                        <div class="card listing-card" style="width: 20rem;">
                            <img src="<%= list.image.url %>" alt="Listing" class="card-img-top" width="300" height="300">
                                <div class="card-body">
                                    <p class="card-text">
                                    <b><%= list.title %></b><br>
                                    Free cancellation<br>
                                    <span> &#8377; <%= list.price.toLocaleString("en-IN") %></span> /  Night <i class="tax-info">  &nbsp;  &nbsp; &nbsp;+18%  GST</i> 
                                    </p>
                                </div>
                         </div>
                     </div>
                </a>
        <% } %>
    </div>

</body>